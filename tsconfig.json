{
  "compilerOptions": {
    "lib": [
      "ES7",
      "DOM"
    ],
    "outDir": "static",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "importsNotUsedAsValues": "error",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": [
      "js/global.d.ts"
    ],
  },
  "include": [
    "js/**/*.ts",
  ],
}