{
  "scripts": {
    "watch:css": "npx tailwindcss -i css/styles.css -o static/css/styles.css --watch",
    "watch:zola": "zola serve",
    "watch:ts": "tsc --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\" \"npm run watch:zola\"",
    "build:css": "NODE_ENV=production npx postcss css/styles.css -o static/css/styles.css",
    "prebuild:ts": "tsc --build",
    "build:ts": "npx uglifyjs static/js/index.js -o static/js/index.min.js",
    "build:zola": "zola build",
    "build": "npm run build:css && npm run build:ts && npm run build:zola"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "cssnano": "^5.1.13",
    "daisyui": "^2.31.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "uglify-js": "^3.17.3"
  }
}